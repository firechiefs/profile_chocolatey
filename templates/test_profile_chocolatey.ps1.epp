<%- | String $success_color, String $error_color, String $validation_data | -%>
# generated by profile/templates/timezone_test_.ps1.epp

# variables passed in via profile::timezone
$ConsoleSuccess = "<%= $success_color %>"
$ConsoleError   = "<%= $error_color %>"
$CorrectVersion = "<%= $validation_data %>"

# get current chocolatey version
$CurrentVersion = [string](choco --version)

# check if we're running correct version
if ($CurrentVersion -match $CorrectVersion) {
    write-host "PASS: PROFILE::CHOCOLATEY Chocolatey version", $CurrentVersion, "is equal to", $CorrectVersion -ForegroundColor $ConsoleSuccess
}
else {
    write-host "FAIL: PROFILE::CHOCOLATEY Chocolatey version", $CurrentVersion, "not equal to", $CorrectVersion -ForegroundColor $ConsoleError
}
